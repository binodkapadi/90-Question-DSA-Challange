
SOLUTION OF THE ABOVE PROBLEM (CODE):

class Solution {
public:
    bool check(vector<int>& nums) {
        int n = size(nums), count = 0;
        //int count = 0;

        for(int i=0; i<n; i++){
            if(nums[i] > nums[(i+1) % n]){
                count++;
            }
        }
        return count <= 1;
    }
};
