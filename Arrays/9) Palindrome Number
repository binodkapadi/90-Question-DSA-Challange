LeetCode Problem 
CODE ==>

class Solution {
public:
    bool isPalindrome(int x) {
        if (x < 0){
            return false;
        }
        long long rev=0, m = x;
        while(m) {
            int k = m % 10;
            rev = rev * 10 + k;
            m /= 10;
        }
    return rev == x;
    }
};
